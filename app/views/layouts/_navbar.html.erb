<div class="navbar-container">
  <!-- Logo -->
  <span class="navbar-words">
    <%= link_to root_path do %>
    <div class="navbar-words">Node Labs</div>
    <% end %>
  </span>

  <!-- Sign in / Sign up -->
  <span class="navbar-words">
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user %>
        <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: {:toggle => "dropdown"}%>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        </ul>
        <% else %>
        <%= link_to "Log In", user_session_path, class: "navbar-words" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "navbar-words" %>
        <% end %>
      </div>
    </div>
  </span>
</div>
