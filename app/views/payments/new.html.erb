<div class="background-color-payment-new">
  <div class="padding-top-bottom-payment-new">
    <div class="container">
      <h3 id="show-computer-title">Build Summary</h3>
      <div class="row">
        <% @computer.sorted_specs.select(&:component).each do |spec| %>
          <%= render "components/spec", spec: spec, edit_functions: false %>
        <% end %>
      </div>
  </div>

      <div class="shipping-info-wrapper my-4">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-5 card-padding-payment">
              <div class="delivery-address mt-4"><p>Delivery Address</p><p>Address: 3 Stradbroke Avenue, Brighton East</p></div>
            </div>

            <hr style="width: 10px; height: 100%; display: inline-block; background-color: white;">

            <div class="col-xs-12 col-sm-5 card-padding-payment">
              <div class="additional-information mt-4"><p>Additional Information</p><p>Shipping is free<p>Package arrives in 5 days</p></div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

<div class="pricing-footer">
    <img src="https://www.scan.co.uk/images/infopages/corsair_cases/570x-top.png" alt="current-case">
    <p><%= humanized_money_with_symbol(@computer.total_price) %></p>
    <div class="empty"></div>
    <%= form_tag order_payments_path(@order) do %>
      <button type="submit" class="btn btn-buy">Pay</button>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="My Computer"
      data-email=<%= current_user.email %>
      data-description="Computer <%= @order.computer_sku %>"
      data-amount="<%= @order.amount_cents %>"
      data-currency="AUD"></script>
    <% end %>
</div>


