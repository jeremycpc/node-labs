        <div class="home-help-baseline">Don't worry. We're here to help.</div>
      </div>
    </div>
      <div class="row help-second-row">
        <div class="col-sm-4">
          <div class="card home-card" style="width: 100%">
            <%= image_tag("games/warcraft.jpg", class: "card-img-top") %>
            <div class="card-body">
            <a href="#" class="btn btn-primary card-home-btn">Strategy</a>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
           <div class="card home-card" style="width: 100%">
            <%= image_tag("games/wow.jpg", class: "card-img-top") %>
            <div class="card-body">
            <a href="#" class="btn btn-primary card-home-btn">MMORPG</a>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="card home-card" style="width: 100%">
            <%= image_tag("games/counter-strike.jpg", class: "card-img-top") %>
            <div class="card-body">
            <a href="#" class="btn btn-primary card-home-btn">FPS</a>
            </div>
          </div>
        </div>
      </div>
   </div>
</div>

