<div class="top-banner-div">
  <div class="banner-content">
    <h1>NODE LABS</h1>
    <p>The ultimate path to your dream gaming machine.</p>
  </div>
  <div class="banner">
    <%= image_tag("homebanner9.png") %>
   </div>
</div>

<div class="main-container-home">
  <div class="container first-container">
    <div class="h-100 row align-items-center ">
      <div class="col">
        <div class="home-div">
          <div class="home-image-div">
            <div id="home-image"></div>
            <div class="lazy">
              <%= image_tag('', data: { src: asset_path("sprite-fan.png") }) %>
            </div>
          </div>
          <div class="home-div-details">
            <div class="main-title">How it works</div>
            <div class="sub-title">Create your custom gaming computer in a few simple steps. <br>Delivered straight to your door. <br><br>No experience? No worries.</div>
            <%= link_to "Start Now", computers_path, method: :create, class: "btn btn btn-primary home-btn"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="home-div3">
    <div class="row help-first-row">
      <div class="col-sm-12">
<!--         <input id="speed" type="number" value="100"/> -->
        <div class="home-help-title">Not sure where to start?</div>
        <div class="home-help-baseline">Don't worry, we're here to help.</div>
        <div class="home-question-text">Pick your favourite game genre.</div>
      </div>
    </div>
    <div class="card-deck">

      <div class="card">
        <%= link_to computers_path(game_category: :fps), method: :create  do %>
          <%= image_tag("games/fortnite.jpg", class: "card-img-top img-fluid") %>
          <div class="card-body">
            <h5 class="card-title">FPS</h5>
          </div>
        <% end %>
      </div>


      <div class="card">
        <%= link_to computers_path(game_category: :action), method: :create  do %>
        <%= image_tag("games/far-cry-5.jpg", class: "card-img-top img-fluid") %>
        <div class="card-body">
          <h5 class="card-title">ACTION</h5>
        </div>
        <% end %>
      </div>


      <div class="card">
        <%= link_to computers_path(game_category: :moba), method: :create  do %>
        <%= image_tag("games/dota.jpg", class: "card-img-top img-fluid") %>
        <div class="card-body">
          <h5 class="card-title">MOBA</h5>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

<div class="footer-position-relative">
  <%= render 'layouts/footer' %>
</div>


