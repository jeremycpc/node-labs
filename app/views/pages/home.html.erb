<div class="main-container-home">

  <div class="container first-container">
    <div class="row">
      <div class="col-xs-12">
        <div class="home-image-div">

          <%= image_tag("larger-images/home-page-image.png", class: "home-image",  :alt => "video-games") %>
        </div>

        <div class="home-div">
          <div class="main-container"></div>
          <div class="main-title">Node Labs</div>
          <div class="sub-title">The ultimate path to your dream gaming machine.</div>
          <div class="home-base-line">Create your custom gaming computer with a few simple steps. No experience, no worries. </div>

          <%= link_to "Start Now", computers_path, method: :create, class: "btn btn btn-primary home-btn"  %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="home-div3">
    <div class="row help-first-row">
