<div class="background-color-computer-index">
  <div class="container">
  <h3 id="saved-builds-title" class="my-3"><%= image_tag "icons/cases.png", width: 27, height: 36, class:"image-right-margin" %> Your saved builds</h3>
    <div class="row">
        <% @computers.each do |c| %>
          <% if c.is_computer_completed? %>
          <div class="col-xs-12 col-md-3">
            <%= link_to computer_path(c), class:"computer-text" do %>
              <div class="card-container my-2">
              COMPUTER: <%= @computers.index(c) + 1 %>
              </div>
            <% end %>
            </div>
          <% end %>
        <% end %>
    </div>
  <h3 id="uncompleted-builds-title" class="mt-5 mb-3"><%= image_tag "icons/uncompleted-computer.png", width: 27, height: 36, class:"image-right-margin" %> Uncompleted builds</h3>
    <div class="row">
      <% @computers.each do |c| %>
        <% if !c.is_computer_completed? %>
        <div class="col-xs-12 col-md-3">
          <%= link_to computer_path(c), class:"computer-text" do %>
            <div class="card-container my-2">
            COMPUTER: <%= @computers.index(c) + 1 %>
            </div>
          <% end %>
        </div>
        <% end %>
      <% end %>
    </div>

  </div>
</div>

<div class="footer-position">
  <%= render 'layouts/footer' %>
</div>






