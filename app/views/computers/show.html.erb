<div class="page-wrapper">

  <h1 class="text-center m-3">Your custom computer</h1>

  <div class="component-wrapper">

  <% @computer.components.each do |component| %>

    <div class="component-item-wrapper">
      <div class="component-item">
        <div class="picture"></div>
        <div class="category text-center"><%= component.category.display_name %></div>
        <div class="name"><%= component.name %></div>
        <div class="price-sm"><div class="price">$<%= component.price %></div></div>
        <div class="computer-btn-style-sm">
        <div class="computer-btn-style">
          <div class="margin-btn btn btn-primary btn-sm"><%= link_to "Edit", computer_components_path(@computer.id, category: component.category.slug) %></div>
          <div class="margin-btn btn btn-danger btn-sm"><%= link_to "Remove" %></div>
        </div>
      </div>
      </div>
    </div>

  <% end %>

  </div>

</div>




