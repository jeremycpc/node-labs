<div class="login-div">

  <div class="sign-up-form-div">
    <div class="sign-up-title" >Welcome!</div>
      <p class="sign-up-link">New to Node Labs? <%= link_to "Sign up.", :new_user_registration %></p>

    <div class="container">
      <div class="row-login">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs sign-up-form">
              <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Enter your email" %>
              <%= f.input :password, required: false, label: false, placeholder: "Your password" %>
            </div>

            <div class="form-check-login">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions-login">
              <%= f.button :submit, "Log in" %>
              <button class="twitchbutton"><i class="fab fa-twitch"></i><%= render "devise/shared/connection_links" %></button>
            </div>
          <% end %>

          <div class="forgotpw">
            <%= link_to "Forgot password?" %>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>

<div class="footer-position">
  <%= render 'layouts/footer' %>
</div>


