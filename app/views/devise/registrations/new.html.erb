<div class="signup-div">

  <div class="log-in-form-div">
    <div class="container">
      <div class="row-signup">
        <div class="sign-up-title">Discover the path to your ultimate<br>gaming machine!</div>
        <p class="sign-up-link">Already have an account? <%= link_to "Log In", :new_user_session %></p>

        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

          <div class="form-signup">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> <%= f.error_notification %>

              <%= f.input :email, required: true, autofocus: true, autofocus: true, label: false, placeholder: "Enter your email" %>
              <%= f.input :password, required: true, label: false, placeholder: "Choose a password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm your password" %>

            <div class="form-actions-signup">
              <%= f.button :submit, "Sign Up" %>
            </div>
            <div class="twitchconnect">
          <%= render "devise/shared/connection_links" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="footer-position">
  <%= render 'layouts/footer' %>
</div>
