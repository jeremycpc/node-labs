<%= simple_form_for [@computer, @spec] do |f| %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="top-div">
        <div class="skip-div">
        <% if (@categories_left & Category::MANDATORIES).empty? %>
          <% if Spec::STEPS.index(@category.slug) + 1 > Spec::STEPS.keys.size %>
            <%= link_to computer_path(@computer) do %>
            <i class="fas fa-arrow-circle-right"></i> <p class="skip">Skip</p>
            <% end %>
          <% else %>
            <%= link_to computer_components_path(:category =>
            Spec::STEPS[Spec::STEPS.index(@category.slug) + 1]) do %>
            <i class="fas fa-arrow-circle-right"></i> <p class="skip">Skip</p>
            <% end %>
          <% end %>
        <% end %>
        </div>
        <p class="top-div-text">Step <%= Spec::STEPS.index(@category.slug) %>: Choose your <%= @category.display_name.singularize %> </p>
        <div class="row">
          <div class="col-8">
            <div class="inner-div">
              <% if @components.first.category_id >= 2 %>
              <%= link_to "Previous", :back, class: "btn btn-primary btn-lg previous"  %>
              <%= f.submit "Next", class: "btn btn-primary btn-lg next"  %>
              <% else %>
              <%= f.submit "Next", class: "btn btn-primary btn-lg next"  %>
              <% end %>
            </div>
          </div>
          <div class="col-4">
            <div class="right-inner-div">
              <% @components.each do |component| %>
              <div class="row">
                <div class="col-12">
                  <div class="components">
                    <%= f.radio_button :component_id, component.id %>
                    <%= f.label :"component_id_#{component.id}", component.name %>
                    <p id="component-price" data-value="<%= component.price %>">$<%= component.price %></p>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

  <div class="pricing-footer">
    <% if params[:category] != 'cases' %>
    <%= image_tag "https://www.scan.co.uk/images/infopages/corsair_cases/570x-top.png" %>
    <% end %>
    <p id="current-price" data-value="<%= @computer.price %>"><%= humanized_money_with_symbol(@computer.price) %></p>
    <div class="empty"></div>
    <div>
      <% if @computer.is_computer_completed? %>
        <%= button_tag "Finish", type: "submit", class: "btn btn-success",
        onclick: "submitForm(forms[0], '?finished=true')" %>
      <% end %>
    </div>
  </div>

  <script type="text/javascript">
    function submitForm(form, params) {
      form.action = form.action + params
      form.submit()
    }
  </script>

